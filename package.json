{
    "name": "webpack-modernizr-loader",
    "version": "3.0.0",
    "description": "Get your modernizr build bundled with webpack, use modernizr with webpack easily",
    "repository": {
        "type": "git",
        "url": "https://github.com/itgalaxy/webpack-modernizr-loader.git"
    },
    "homepage": "https://github.com/itgalaxy/webpack-modernizr-loader",
    "keywords": [
        "modernizr",
        "webpack",
        "loader"
    ],
    "author": "Itgalaxy <development@itgalaxy.company>",
    "bugs": {
        "url": "https://github.com/itgalaxy/webpack-modernizr-loader/issues"
    },
    "license": "MIT",
    "main": "index.js",
    "files": [
        "index.js"
    ],
    "dependencies": {
        "modernizr": "^3.1.0",
        "loader-utils": "^1.0.0"
    },
    "devDependencies": {
        "ava": "^0.19.0",
        "ajv-cli": "^2.1.0",
        "babel-preset-es2015": "^6.14.0",
        "babel-preset-stage-0": "^6.5.0",
        "babel-register": "^6.14.0",
        "eslint": "^4.0.0",
        "eslint-plugin-ava": "^4.2.0",
        "eslint-plugin-import": "^2.2.0",
        "eslint-plugin-itgalaxy": "^47.0.0",
        "eslint-plugin-jsx-a11y": "^5.0.1",
        "eslint-plugin-jest": "^20.0.3",
        "eslint-plugin-lodash": "^2.3.0",
        "eslint-plugin-node": "^5.0.0",
        "eslint-plugin-prettier": "^2.1.1",
        "eslint-plugin-promise": "^3.5.0",
        "eslint-plugin-react": "^7.0.0",
        "eslint-plugin-unicorn": "^2.0.0",
        "npmpub": "^3.1.0",
        "npm-run-all": "^4.0.0",
        "nyc": "^11.0.2",
        "package-schema": "^1.0.0",
        "remark-cli": "^3.0.0",
        "remark-preset-lint-itgalaxy": "^6.0.0",
        "webpack": "^2.2.1",
        "tmp": "^0.0.31",
        "pify": "^3.0.0",
        "husky": "^0.13.0",
        "lint-staged": "^3.6.0",
        "prettier": "^1.4.2"
    },
    "peerDependencies": {
        "webpack": "^2.0.0"
    },
    "scripts": {
        "precommit": "lint-staged",

        "lint:eslint": "eslint . --ignore-path .gitignore --ignore-pattern '**/fixtures/**'",
        "lint:package": "ajv -s ./node_modules/package-schema/schema.json -d package --errors=text",
        "lint:remark": "remark . -i .gitignore -q -f",
        "lint": "npm-run-all -l -p lint:**",

        "formatter:prettier": "eslint . --fix --ignore-path .gitignore",
        "formatter": "npm-run-all -l -p formatter:**",

        "ava": "nyc ava --verbose '**/__tests__/*.js'",
        "pretest": "npm run lint",
        "test": "npm run ava",

        "release": "npmpub"
    },
    "babel": {
        "presets": [
            "es2015",
            "stage-0"
        ]
    },
    "ava": {
        "require": "babel-register",
        "concurrency": 5,
        "babel": "inherit"
    },
    "eslintConfig": {
        "extends": [
            "plugin:itgalaxy/ava",
            "plugin:itgalaxy/esnext",
            "plugin:itgalaxy/node",
            "plugin:itgalaxy/prettier"
        ],
        "root": true
    },
    "remarkConfig": {
        "plugins": [
            "remark-preset-lint-itgalaxy"
        ]
    }
}
